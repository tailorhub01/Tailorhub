{
  "expo": {
    "name": "Tailor Hub",
    "slug": "tailor-hub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/favicon.png",
    "scheme": "tailorhub",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/favicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#7c3aed"
    },
    "android": {
      "package": "com.tailorhub.expo",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/favicon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tailorhub.expo",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby tailoring services and provide accurate delivery estimates.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to show nearby tailoring services and provide accurate delivery estimates."
      }
    },
    "android": {
      "package": "com.tailorhub.expo",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/favicon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Tailor Hub to use your location to show nearby services and provide accurate delivery estimates."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
